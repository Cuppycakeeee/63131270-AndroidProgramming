<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="188dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/logo50nam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chucnang2"
        android:layout_width="126dp"
        android:layout_height="85dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="60dp"
        android:text="Chức Năng 2"
        app:layout_constraintEnd_toStartOf="@+id/chucnang3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chucnang3"
        android:layout_width="127dp"
        android:layout_height="83dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="56dp"
        android:text="Chức Năng 3"
        app:layout_constraintBottom_toTopOf="@+id/aboutme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/chucnang4"
        android:layout_width="121dp"
        android:layout_height="93dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="224dp"
        android:text="Chức Năng 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aboutme" />

    <Button
        android:id="@+id/aboutme"
        android:layout_width="123dp"
        android:layout_height="93dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="224dp"
        android:text="About Me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>